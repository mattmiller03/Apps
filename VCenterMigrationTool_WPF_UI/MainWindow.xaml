<Window x:Class="VCenterMigrationTool_WPF_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="vCenter Migration Tool v1.0" 
        Height="912" Width="1222"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Window.Resources>
        <!-- Modern Button Styles with Fallback Colors -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFCCCCCC"/>
                                <Setter Property="Foreground" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Specialized Button Styles -->
        <Style x:Key="ConnectButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BackupButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF2196F3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MigrationButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FFFF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FFF44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Text Styles with Fallback Colors -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,10,5,5"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
        </Style>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Input Styles -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Menu Styles -->
        <Style x:Key="ModernMenuStyle" TargetType="Menu">
            <Setter Property="Background" Value="#FF2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style x:Key="ModernMenuItemStyle" TargetType="MenuItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>
    </Window.Resources>

    <Grid Background="#FFF8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="200" MinHeight="100" MaxHeight="600"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Style="{StaticResource ModernMenuStyle}">
            <MenuItem Header="File" Style="{StaticResource ModernMenuItemStyle}">
                <MenuItem Header="📁 Load Connection Profile" Click="LoadProfile_Click"/>
                <MenuItem Header="💾 Save Connection Profile" Click="SaveProfile_Click"/>
                <Separator/>
                <MenuItem Header="📄 Export Configuration" Click="ExportConfig_Click"/>
                <MenuItem Header="📥 Import Configuration" Click="ImportConfig_Click"/>
                <Separator/>
                <MenuItem Header="🚪 Exit" Click="Exit_Click"/>
            </MenuItem>

            <MenuItem Header="Tools" Style="{StaticResource ModernMenuItemStyle}">
                <MenuItem Header="📂 Configure Backup Path" Click="ConfigureBackupPath_Click"/>
                <MenuItem Header="🔑 Manage Migration Credentials" Click="ManageCredentials_Click"/>
                <Separator/>
                <MenuItem Header="🔧 PowerCLI Settings" Click="PowerCLISettings_Click"/>
                <MenuItem Header="📊 View Logs" Click="ViewLogs_Click"/>
                <MenuItem Header="🧹 Clear Cache" Click="ClearCache_Click"/>
                <Separator/>
                <MenuItem Header="⚙️ Application Settings" Click="AppSettings_Click"/>
            </MenuItem>

            <MenuItem Header="Help" Style="{StaticResource ModernMenuItemStyle}">
                <MenuItem Header="📖 User Guide" Click="UserGuide_Click"/>
                <MenuItem Header="🆘 Support" Click="Support_Click"/>
                <MenuItem Header="ℹ️ About" Click="About_Click"/>
            </MenuItem>
        </Menu>


        <!-- Main Content Tabs -->
        <TabControl Grid.Row="1" Name="MainTabControl" Margin="10,10,10,10" Background="White" Grid.RowSpan="3">

            <!-- Connection Tab -->
            <TabItem Header="🔌 Connection" FontSize="14">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="🔌 vCenter Server Connections" 
                   Style="{StaticResource HeaderTextStyle}" FontSize="20" 
                   Margin="0,0,0,20"/>

                    <!-- Connection Forms -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Source vCenter -->
                        <GroupBox Grid.Column="0" Header="📤 Source vCenter (7.x)" 
                      Background="White" BorderBrush="#FFDDDDDD" BorderThickness="2">
                            <StackPanel Margin="15">
                                <TextBlock Text="Server Address:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Name="SourceVCenterTextBox" Style="{StaticResource ModernTextBoxStyle}" 
                             Margin="0,0,0,15" ToolTip="Enter the FQDN or IP address of the source vCenter server"/>

                                <TextBlock Text="Username:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Name="SourceUsernameTextBox" Style="{StaticResource ModernTextBoxStyle}" 
                             Margin="0,0,0,15" ToolTip="Enter username (e.g., administrator@vsphere.local)"/>

                                <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <PasswordBox Name="SourcePasswordBox" Style="{StaticResource ModernPasswordBoxStyle}" 
                                 Margin="0,0,0,20"/>

                                <Button Name="ConnectSourceButton" Content="🔌 Connect" 
                            Style="{StaticResource ConnectButtonStyle}" Click="ConnectSource_Click" 
                            Margin="0,0,0,15"/>

                                <StackPanel>
                                    <TextBlock Name="SourceStatusText" Text="❌ Not Connected" 
                                   FontWeight="SemiBold" Foreground="Red" Margin="0,0,0,5"/>
                                    <TextBlock Name="SourceVersionText" Text="Version: Unknown" 
                                   FontStyle="Italic" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Destination vCenter -->
                        <GroupBox Grid.Column="2" Header="📥 Destination vCenter (8.x)" 
                      Background="White" BorderBrush="#FFDDDDDD" BorderThickness="2">
                            <StackPanel Margin="15">
                                <TextBlock Text="Server Address:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Name="DestVCenterTextBox" Style="{StaticResource ModernTextBoxStyle}" 
                             Margin="0,0,0,15" ToolTip="Enter the FQDN or IP address of the destination vCenter server"/>

                                <TextBlock Text="Username:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox Name="DestUsernameTextBox" Style="{StaticResource ModernTextBoxStyle}" 
                             Margin="0,0,0,15" ToolTip="Enter username (e.g., administrator@vsphere.local)"/>

                                <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <PasswordBox Name="DestPasswordBox" Style="{StaticResource ModernPasswordBoxStyle}" 
                                 Margin="0,0,0,20"/>

                                <Button Name="ConnectDestButton" Content="🔌 Connect" 
                            Style="{StaticResource ConnectButtonStyle}" Click="ConnectDest_Click" 
                            Margin="0,0,0,15"/>

                                <StackPanel>
                                    <TextBlock Name="DestStatusText" Text="❌ Not Connected" 
                                   FontWeight="SemiBold" Foreground="Red" Margin="0,0,0,5"/>
                                    <TextBlock Name="DestVersionText" Text="Version: Unknown" 
                                   FontStyle="Italic" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </Grid>

                    <!-- Control Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" 
                    Margin="0,30,0,0">
                        <Button Name="TestConnectionButton" Content="🔍 Test Connection" 
                    Style="{StaticResource ModernButtonStyle}" Click="TestConnection_Click" 
                    Width="150" Height="35" Margin="0,0,15,0"/>
                        <Button Name="DisconnectAllButton" Content="🔌 Disconnect All" 
                    Style="{StaticResource DangerButtonStyle}" Click="DisconnectAll_Click" 
                    Width="150" Height="35" Margin="0,0,15,0"/>
                        <Button Name="SaveConnectionProfileButton" Content="💾 Save Profile" 
                    Style="{StaticResource ModernButtonStyle}" Click="SaveCurrentSettings_Click" 
                    Width="150" Height="35"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Backup Tab -->
            <TabItem Header="💾 Backup Tasks" FontSize="14">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="120"/>
                    </Grid.RowDefinitions>

                    <!-- Header Section with Controls -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="📋 Backup Configuration" Style="{StaticResource HeaderTextStyle}" FontSize="18" Margin="0,0,0,10"/>

                        <!-- Scope, Backup Path, and Controls Row -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Scope Selection -->
                            <TextBlock Grid.Column="0" Text="🎯 Scope:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" Name="ScopeComboBox" SelectedIndex="0" 
                          SelectionChanged="ScopeComboBox_SelectionChanged" VerticalAlignment="Center">
                                <ComboBoxItem Content="vCenter Level"/>
                                <ComboBoxItem Content="Datacenter Level"/>
                                <ComboBoxItem Content="Cluster Level"/>
                                <ComboBoxItem Content="Host Level"/>
                            </ComboBox>

                            <!-- Separator -->
                            <Separator Grid.Column="2" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" 
                           Margin="10,0,10,0"/>

                            <!-- Backup Path Display -->
                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="📂 Backup Path:" FontWeight="SemiBold" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock Name="BackupPathDisplayText" Text="C:\VCenterBackup" 
                               FontStyle="Italic" Foreground="#FF666666" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="(Configure in Tools menu)" FontSize="10" Foreground="Gray" VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Flexible Space -->
                            <Grid Grid.Column="4"/>

                            <!-- Separator -->
                            <Separator Grid.Column="5" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" 
                           Margin="10,0,10,0"/>

                            <!-- Control Buttons (Horizontal) -->
                            <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Name="ExecuteBackupButton" Content="🚀 Execute Backup" 
                            Style="{StaticResource BackupButtonStyle}" Click="ExecuteBackup_Click" 
                            Width="130" Height="32" Margin="0,0,10,0"/>
                                <Button Name="CancelBackupButton" Content="🛑 Cancel" 
                            Style="{StaticResource DangerButtonStyle}" Click="CancelBackup_Click" 
                            Width="80" Height="32" Visibility="Collapsed" Margin="0,0,15,0"/>

                                <Button Name="SelectAllBackupButton" Content="✅ Select All" 
                            Style="{StaticResource ModernButtonStyle}" Click="SelectAllBackup_Click" 
                            Width="90" Height="32" Margin="0,0,10,0"/>
                                <Button Name="ClearAllBackupButton" Content="❌ Clear All" 
                            Style="{StaticResource ModernButtonStyle}" Click="ClearAllBackup_Click" 
                            Width="90" Height="32"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Main Content Area (Two Columns) -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT: Scrollable Backup Task Selection -->
                        <GroupBox Grid.Column="0" Header="📋 Backup Tasks" Background="White" 
                      BorderBrush="#FFDDDDDD" BorderThickness="1">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="5">
                                <StackPanel Margin="5">
                                    <!-- Infrastructure Backup Tasks -->
                                    <TextBlock Text="🏗️ Infrastructure" FontWeight="Bold" FontSize="14" 
                                   Foreground="#FF2E86AB" Margin="0,0,0,10"/>

                                    <CheckBox Name="BackupVDSCheckBox" Content="📡 Virtual Distributed Switches" 
                                  IsChecked="True" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • Port groups, uplinks, VLAN configurations" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,8"/>

                                    <CheckBox Name="BackupUsersCheckBox" Content="👥 Users and Groups" 
                                  IsChecked="True" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • SSO users, groups, and identity sources" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,8"/>

                                    <CheckBox Name="BackupRolesCheckBox" Content="🔐 Administration Roles" 
                                  IsChecked="True" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • Custom roles and privilege assignments" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,8"/>

                                    <CheckBox Name="BackupPermissionsCheckBox" Content="🛡️ Global Permissions" 
                                  IsChecked="True" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • User/group permissions on vCenter objects" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,15"/>

                                    <!-- Security Backup Tasks -->
                                    <TextBlock Text="🔒 Security &amp; Identity" FontWeight="Bold" FontSize="14" 
                                   Foreground="#FF2E86AB" Margin="0,0,0,10"/>

                                    <CheckBox Name="BackupCertificatesCheckBox" Content="📜 SSL Certificates" 
                                  IsChecked="False" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • vCenter and ESXi SSL certificates" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,8"/>

                                    <CheckBox Name="BackupIdentityCheckBox" Content="🆔 Identity Sources" 
                                  IsChecked="False" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • Active Directory and LDAP configurations" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,15"/>

                                    <!-- Compute Resources -->
                                    <TextBlock Text="💻 Compute Resources" FontWeight="Bold" FontSize="14" 
                                   Foreground="#FF2E86AB" Margin="0,0,0,10"/>

                                    <CheckBox Name="BackupHostConfigCheckBox" Content="🖥️ Host Configurations" 
                                  IsChecked="True" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • ESXi host settings and configurations" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,8"/>

                                    <CheckBox Name="BackupVMConfigCheckBox" Content="💻 VM Configurations" 
                                  IsChecked="True" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • Virtual machine settings and metadata" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,8"/>

                                    <CheckBox Name="BackupClusterConfigCheckBox" Content="🏢 Cluster Configurations" 
                                  IsChecked="True" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • DRS, HA, EVC, and vSAN settings" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,15"/>

                                    <!-- Resource Management -->
                                    <TextBlock Text="⚖️ Resource Management" FontWeight="Bold" FontSize="14" 
                                   Foreground="#FF2E86AB" Margin="0,0,0,10"/>

                                    <CheckBox Name="BackupResourcePoolCheckBox" Content="🏊 Resource Pools" 
                                  IsChecked="True" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • CPU and memory resource allocations" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,8"/>

                                    <CheckBox Name="BackupFoldersCheckBox" Content="📁 VM Folders" 
                                  IsChecked="True" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • Virtual machine folder structure" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,15"/>

                                    <!-- Advanced Options -->
                                    <TextBlock Text="⚙️ Advanced Options" FontWeight="Bold" FontSize="14" 
                                   Foreground="#FF2E86AB" Margin="0,0,0,10"/>

                                    <CheckBox Name="BackupAdvancedSettingsCheckBox" Content="🔧 Advanced Settings" 
                                  IsChecked="False" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • vCenter advanced configuration parameters" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,8"/>

                                    <CheckBox Name="BackupCustomAttributesCheckBox" Content="🏷️ Custom Attributes" 
                                  IsChecked="False" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • Custom fields and annotations" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,8"/>

                                    <CheckBox Name="BackupAlarmsCheckBox" Content="🚨 Alarms and Events" 
                                  IsChecked="False" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • Alarm definitions and event configurations" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,8"/>

                                    <CheckBox Name="BackupTagsCheckBox" Content="🏷️ Tags and Categories" 
                                  IsChecked="False" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • vSphere tags and tag categories" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,15"/>

                                    <!-- Policies and Profiles -->
                                    <TextBlock Text="📋 Policies &amp; Profiles" FontWeight="Bold" FontSize="14" 
                                   Foreground="#FF2E86AB" Margin="0,0,0,10"/>

                                    <CheckBox Name="BackupStoragePoliciesCheckBox" Content="💾 Storage Policies" 
                                  IsChecked="False" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • VM storage policies and profiles" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,8"/>

                                    <CheckBox Name="BackupHostProfilesCheckBox" Content="👤 Host Profiles" 
                                  IsChecked="False" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • ESXi host configuration profiles" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,8"/>

                                    <CheckBox Name="BackupContentLibraryCheckBox" Content="📚 Content Libraries" 
                                  IsChecked="False" Margin="10,0,0,8" FontSize="12"/>
                                    <TextBlock Text="   • VM templates and ISO images" 
                                   FontSize="10" Foreground="Gray" Margin="10,0,0,20"/>
                                </StackPanel>
                            </ScrollViewer>
                        </GroupBox>

                        <!-- Splitter -->
                        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="#FFCCCCCC" ShowsPreview="True"/>

                        <!-- RIGHT: Expanded Inventory Tree -->
                        <GroupBox Grid.Column="2" Header="🌳 Source vCenter Inventory" Background="White" 
                      BorderBrush="#FFDDDDDD" BorderThickness="1">
                            <TreeView Name="InventoryTreeView" Background="White" BorderThickness="0" 
                          Margin="5"/>
                        </GroupBox>
                    </Grid>

                    <!-- Compact Progress Section -->
                    <GroupBox Grid.Row="2" Header="📊 Backup Progress" Background="White" 
                  BorderBrush="#FFDDDDDD" BorderThickness="1" Margin="0,10,0,0">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Overall Progress -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Progress:" FontWeight="SemiBold" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ProgressBar Grid.Column="1" Name="BackupProgressBar" Height="18" 
                                 Background="#FFF0F0F0" Foreground="#FF4CAF50" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="2" Name="BackupProgressText" Text="0% Complete" 
                               FontWeight="SemiBold" VerticalAlignment="Center" FontSize="12"/>
                            </Grid>

                            <!-- Current Task and Details (Horizontal Layout) -->
                            <Grid Grid.Row="1" Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Name="CurrentBackupTaskText" 
                               Text="Ready to start backup process..." FontWeight="SemiBold" 
                               FontSize="12" TextTrimming="CharacterEllipsis"/>

                                <TextBlock Grid.Column="2" Name="BackupDetailText" 
                               Text="Select backup tasks and click Execute to begin." 
                               FontStyle="Italic" Foreground="Gray" FontSize="11" 
                               TextTrimming="CharacterEllipsis"/>
                            </Grid>

                            <!-- Detailed Progress (Compact) -->
                            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled" MaxHeight="40">
                                <TextBlock Name="BackupDetailedProgressText" TextWrapping="Wrap" 
                               FontFamily="Consolas" FontSize="9" Foreground="#FF666666"/>
                            </ScrollViewer>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Migration Tab -->
            <TabItem Header="🚀 Migration Tasks" FontSize="14">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Migration Controls -->
                    <GroupBox Header="🎮 Migration Controls" Grid.Column="0" Margin="5"
                              Background="White" BorderBrush="#FFDDDDDD" BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="15">
                                <TextBlock Text="Migration Tasks:" FontWeight="Bold" Margin="0,0,0,10"
                                          Foreground="#FF2C3E50" FontSize="14"/>

                                <Button Name="MigrateHostButton" Content="🖥️ Migrate Host" 
                                       Style="{StaticResource MigrationButtonStyle}" 
                                       Click="MigrateHost_Click"/>
                                <Button Name="MigrateVMButton" Content="💻 Migrate VM" 
                                       Style="{StaticResource MigrationButtonStyle}" 
                                       Click="MigrateVM_Click"/>
                                <Button Name="MigrateClusterButton" Content="🏢 Migrate Cluster" 
                                       Style="{StaticResource MigrationButtonStyle}" 
                                       Click="MigrateCluster_Click"/>

                                <Separator Margin="15"/>
                                <TextBlock Text="Migration Options:" FontWeight="Bold" Margin="0,0,0,10"
                                          Foreground="#FF2C3E50" FontSize="14"/>

                                <CheckBox Name="MaintenanceModeCheckBox" Content="🔧 Enable Maintenance Mode" 
                                         IsChecked="True" Margin="5" FontSize="12"/>
                                <CheckBox Name="ClearEphemeralCheckBox" Content="🧹 Clear Ephemeral Networks" 
                                         IsChecked="True" Margin="5" FontSize="12"/>
                                <CheckBox Name="RestoreSettingsCheckBox" Content="⚙️ Restore Settings" 
                                         IsChecked="True" Margin="5" FontSize="12"/>
                                <CheckBox Name="ValidateAfterCheckBox" Content="✅ Validate After Migration" 
                                         IsChecked="True" Margin="5" FontSize="12"/>

                                <Separator Margin="15"/>
                                <TextBlock Text="Batch Operations:" FontWeight="Bold" Margin="0,0,0,10"
                                          Foreground="#FF2C3E50" FontSize="14"/>

                                <Button Name="BatchMigrateButton" Content="📦 Batch Migrate Selected" 
                                       Style="{StaticResource MigrationButtonStyle}" 
                                       Click="BatchMigrate_Click"/>
                                <Button Name="RollbackButton" Content="↩️ Rollback Migration" 
                                       Style="{StaticResource DangerButtonStyle}" 
                                       Click="Rollback_Click"/>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>

                    <!-- Migration Progress -->
                    <GroupBox Header="📈 Migration Progress" Grid.Column="1" Margin="5"
                              Background="White" BorderBrush="#FFDDDDDD" BorderThickness="1">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Name="CurrentMigrationTaskText" Grid.Row="0" Margin="0,0,0,10" 
                                      Text="Ready for migration tasks" FontWeight="Bold" Foreground="#FF2C3E50" FontSize="12"/>

                            <DataGrid Name="MigrationProgressGrid" Grid.Row="1" Margin="0,0,0,10" 
                                     AutoGenerateColumns="False" CanUserAddRows="False" 
                                     IsReadOnly="True" GridLinesVisibility="Horizontal"
                                     Background="White" BorderBrush="#FFDDDDDD" BorderThickness="1" FontSize="11">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Object" Binding="{Binding ObjectName}" Width="150"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding ObjectType}" Width="80"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                    <DataGridTextColumn Header="Progress" Binding="{Binding Progress}" Width="80"/>
                                    <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" Width="120"/>
                                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="80"/>
                                    <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="2" Margin="0,10">
                                <TextBlock Text="Overall Migration Progress:" FontWeight="Bold" Foreground="#FF2C3E50" FontSize="12"/>
                                <ProgressBar Name="OverallProgressBar" Height="25" Margin="0,5"
                                           Background="#FFEEEEEE" Foreground="#FFFF9800"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Name="OverallProgressText" Text="0% Complete" Margin="0,0,20,0" 
                                              Foreground="#FF666666" FontSize="11"/>
                                    <TextBlock Name="EstimatedTimeText" Text="Estimated time: --" 
                                              Foreground="Gray" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <Button Name="PauseMigrationButton" Content="⏸️ Pause" 
                                       Style="{StaticResource ModernButtonStyle}" Click="PauseMigration_Click"/>
                                <Button Name="StopMigrationButton" Content="⏹️ Stop" 
                                       Style="{StaticResource DangerButtonStyle}" Click="StopMigration_Click"/>
                                <Button Name="ExportReportButton" Content="📊 Export Report" 
                                       Style="{StaticResource ModernButtonStyle}" Click="ExportReport_Click"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Validation Tab -->
            <TabItem Header="✅ Validation" FontSize="14">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Validation Controls -->
                    <GroupBox Header="🔍 Validation Tests" Grid.Column="0" Margin="5"
                              Background="White" BorderBrush="#FFDDDDDD" BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="15">
                                <TextBlock Text="Pre-Migration Validation:" FontWeight="Bold" Margin="0,0,0,10"
                                          Foreground="#FF2C3E50" FontSize="14"/>

                                <CheckBox Name="ValidateConnectivityCheckBox" Content="🔌 Connectivity Tests" 
                                         IsChecked="True" Margin="5" FontSize="12"/>
                                <CheckBox Name="ValidateVersionCheckBox" Content="📊 Version Compatibility" 
                                         IsChecked="True" Margin="5" FontSize="12"/>
                                <CheckBox Name="ValidateResourcesCheckBox" Content="💾 Resource Availability" 
                                         IsChecked="True" Margin="5" FontSize="12"/>
                                <CheckBox Name="ValidatePermissionsCheckBox" Content="🔐 Permissions Check" 
                                         IsChecked="True" Margin="5" FontSize="12"/>
                                <CheckBox Name="ValidateNetworkCheckBox" Content="🌐 Network Configuration" 
                                         IsChecked="True" Margin="5" FontSize="12"/>
                                <CheckBox Name="ValidateStorageCheckBox" Content="💽 Storage Configuration" 
                                         IsChecked="True" Margin="5" FontSize="12"/>

                                <Separator Margin="15"/>
                                <TextBlock Text="Post-Migration Validation:" FontWeight="Bold" Margin="0,0,0,10"
                                          Foreground="#FF2C3E50" FontSize="14"/>

                                <CheckBox Name="ValidateServicesCheckBox" Content="⚙️ Service Status" 
                                         IsChecked="True" Margin="5" FontSize="12"/>
                                <CheckBox Name="ValidateVMsCheckBox" Content="💻 VM Functionality" 
                                         IsChecked="True" Margin="5" FontSize="12"/>
                                <CheckBox Name="ValidateNetworkingCheckBox" Content="🔗 Network Connectivity" 
                                         IsChecked="True" Margin="5" FontSize="12"/>

                                <Separator Margin="15"/>

                                <StackPanel>
                                    <Button Name="SelectAllValidationButton" Content="✅ Select All" 
                                           Style="{StaticResource ModernButtonStyle}" Click="SelectAllValidation_Click"/>
                                    <Button Name="ClearAllValidationButton" Content="❌ Clear All" 
                                           Style="{StaticResource ModernButtonStyle}" Click="ClearAllValidation_Click"/>
                                </StackPanel>

                                <Separator Margin="15"/>

                                <Button Name="RunValidationButton" Content="🔍 Run Validation Tests" 
                                       Style="{StaticResource BackupButtonStyle}" 
                                       FontSize="14" Height="45" Click="RunValidation_Click"/>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>

                    <!-- Validation Results -->
                    <GroupBox Header="📋 Validation Results" Grid.Column="1" Margin="5"
                              Background="White" BorderBrush="#FFDDDDDD" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Name="CurrentValidationTaskText" Grid.Row="0" Margin="0,0,0,10" 
                                      Text="Ready to run validation tests" FontWeight="Bold" Foreground="#FF2C3E50" FontSize="12"/>

                            <ScrollViewer Grid.Row="1" Margin="0,0,0,10">
                                <DataGrid Name="ValidationResultsGrid" 
                                         AutoGenerateColumns="False" CanUserAddRows="False" 
                                         IsReadOnly="True" GridLinesVisibility="Horizontal"
                                         Background="White" BorderBrush="#FFDDDDDD" BorderThickness="1" FontSize="11">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Test Name" Binding="{Binding TestName}" Width="200"/>
                                        <DataGridTextColumn Header="Result" Binding="{Binding Result}" Width="100"/>
                                        <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="*"/>
                                        <DataGridTextColumn Header="Recommendation" Binding="{Binding Recommendation}" Width="200"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>

                            <StackPanel Grid.Row="2" Margin="0,10">
                                <TextBlock Text="Validation Progress:" FontWeight="Bold" Foreground="#FF2C3E50" FontSize="12"/>
                                <ProgressBar Name="ValidationProgressBar" Height="25" Margin="0,5"
                                           Background="#FFEEEEEE" Foreground="#FF4CAF50"/>
                                <TextBlock Name="ValidationProgressText" Text="0% Complete" 
                                          HorizontalAlignment="Center" Margin="0,5" Foreground="#FF666666" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Activity Log TAB -->
            <TabItem x:Name="ActivityLogTab" Header="📝 Activity Log" FontSize="14">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--  Log-level filter bar -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
                        <TextBlock Text="Log Level:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="LogLevelComboBox" Width="120"
                              SelectionChanged="LogLevelComboBox_SelectionChanged">
                            <ComboBoxItem Content="INFO"  IsSelected="True"/>
                            <ComboBoxItem Content="WARN"/>
                            <ComboBoxItem Content="ERROR"/>
                            <ComboBoxItem Content="DEBUG"/>
                        </ComboBox>
                    </StackPanel>

                    <!--  Scrollable log text  -->
                    <ScrollViewer x:Name="LogScrollViewer" Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="LogTextBox" FontFamily="Consolas"
                         FontSize="12" IsReadOnly="True" AcceptsReturn="True"
                         TextWrapping="NoWrap"/>
                    </ScrollViewer>

                    <!--  Clear / Save buttons -->
                    <StackPanel Orientation="Horizontal" Grid.Row="2"
                        HorizontalAlignment="Right" Margin="0,5,0,0">
                        <Button Content="🗑️ Clear" Style="{StaticResource ModernButtonStyle}"
                        Margin="0,0,5,0" Click="ClearLog_Click"/>
                        <Button Content="💾 Save"  Style="{StaticResource ModernButtonStyle}"
                        Click="SaveLog_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
